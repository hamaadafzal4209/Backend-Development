<!doctype html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
  <div class="w-full h-screen bg-zinc-900 text-white p-6">
    <h3 class="pb-3 text-3xl">Login Your Account</h3>
    <form action="/login" method="post">
        <input type="email" placeholder="email" name="email" class="px-3 py-2 rounded-md border border-gray-600 bg-transparent">
        <input type="password" placeholder="password" name="password" class="px-3 py-2 rounded-md border border-gray-600 bg-transparent">
        <input type="submit" value="Login" class="px-3 py-2 rounded-md bg-blue-600" name="" id="">
    </form>
  </div>
</body>
</html>