<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>

  <body>
    <div class="w-full h-screen bg-zinc-900 p-10 text-white">
      <nav class="mb-6 bg-zinc-700 inline-block rounded-md px-3 py-2">
        <a class="text-blue-500" href="/">Create New User</a>
      </nav>
      <h1 class="text-3xl pb-5">All Users</h1>
      <div class="users flex gap-3 flex-wrap">
        <% if(users.length> 0) { %> <% users.forEach(function(user) { %>
        <div class="user min-w-72 p-4 bg-zinc-800 rounded-md">
          <div class="w-full h-52 bg-zinc-700 rounded-md overflow-hidden">
            <img
              class="w-full h-full object-cover object-top"
              src="<%= user.image %>"
              alt=""
            />
          </div>
          <h3 class="text-xl mt-3"><%= user.name %></h3>
          <h3 class="mt-3"><%= user.email %></h3>
          <div class="flex gap-3 mt-6">
            <a class="text-zinc-200" href="/edit/<%= user._id %>">Edit User</a>
            <a class="text-red-500" href="/delete/<%= user._id %>">Delete User</a>
          </div>
        </div>
        <% }) %> <% } else { %>
        <div class="w-full text-center">
          <p class="text-xl text-red-500">No users found.</p>
        </div>
        <% } %>
      </div>
    </div>
  </body>
</html>
